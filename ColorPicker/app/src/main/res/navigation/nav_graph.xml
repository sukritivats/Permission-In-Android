<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.colorpicker.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.colorpicker.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_fragmentEasy"
            app:destination="@id/fragmentEasy" />
        <action
            android:id="@+id/action_homeFragment_to_fragmentMedium"
            app:destination="@id/fragmentMedium" />
        <action
            android:id="@+id/action_homeFragment_to_fragmentHard"
            app:destination="@id/fragmentHard" />
    </fragment>
    <fragment
        android:id="@+id/fragmentEasy"
        android:name="com.example.colorpicker.FragmentEasy"
        android:label="fragment_easy"
        tools:layout="@layout/fragment_easy" />
    <fragment
        android:id="@+id/fragmentHard"
        android:name="com.example.colorpicker.FragmentHard"
        android:label="fragment_hard"
        tools:layout="@layout/fragment_hard" />
    <fragment
        android:id="@+id/fragmentMedium"
        android:name="com.example.colorpicker.FragmentMedium"
        android:label="fragment_medium"
        tools:layout="@layout/fragment_medium" />
</navigation>